{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6"],
    "target": "es5",
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "./dist"]
}
