{
  "name": "nodejs-graphql-guide",
  "version": "1.0.1",
  "author": "Nikita Borisowsky (https://github.com/borisowsky)",
  "main": "./src/index.ts",
  "scripts": {
    "start": "NODE_ENV=development ts-node-dev --respawn .",
    "serve": "NODE_ENV=production ts-node .",
    "typeorm": "ts-node --require tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:makemigrations": "yarn typeorm migration:generate",
    "db:migrate": "yarn typeorm migration:run"
  },
  "dependencies": {
    "@types/graphql": "14.5.0",
    "@types/node": "15.0.1",
    "apollo-server": "2.25.3",
    "class-validator": "0.13.1",
    "dataloader": "2.0.0",
    "graphql": "15.5.0",
    "reflect-metadata": "0.1.13",
    "slugify": "1.5.1",
    "sqlite3": "5.0.2",
    "ts-node-dev": "1.1.6",
    "typeorm": "0.2.32",
    "typescript": "4.2.4"
  },
  "devDependencies": {
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0"
  }
}
